#include <stdio.h>
void printArr(int *a, int n) {
    for (int i = 0; i < n; ++i) printf("%d ", a[i]);
    printf("\n");
}
void rev(int *a, int l, int r) {
    while (l < r) {
        int t = a[l];
        a[l++] = a[r];
        a[r--] = t;
    }
}
void rotLeft(int *a, int n, int k) {
    k %= n;
    rev(a, 0, k - 1);
    rev(a, k, n - 1);
    rev(a, 0, n - 1);
void rotRight(int *a, int n, int k) {
    k %= n;
    rev(a, 0, n - k - 1);
    rev(a, n - k, n - 1);
    rev(a, 0, n - 1);
}
int main(void) {
    int arr[] = {1, 2, 3, 4, 5, 6, 7};
    int n = sizeof(arr) / sizeof(arr[0]);
    printf("Original: ");
    printArr(arr, n);
  rotLeft(arr, n, 3);
    printf("Left 3:   ");
    printArr(arr, n);
  rotRight(arr, n, 2);
    printf("Right 2:  ");
    printArr(arr, n);
 return 0;
}
      
